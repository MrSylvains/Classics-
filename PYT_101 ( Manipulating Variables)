      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "Enter the number of pizzas: 4\n",
            "Enter the number of slices per pizza: 8\n",
            "Enter the number of people at the party: 16\n",
            "Each person gets 2.0 slices.\n"
          ]
        }
